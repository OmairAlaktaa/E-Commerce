@model ProkodersECommerce.ViewModels.CartItemViewModel

<tr>
    <td>@Model.ProductName</td>
    <td>@Model.Price.ToString("C")</td>
    <td>
        <form asp-action="UpdateQuantity" method="post" class="form-inline">
            <input type="hidden" name="productId" value="@Model.ProductId" />
            <input type="number" name="quantity" value="@Model.Quantity" min="1" class="form-control w-50 d-inline" />
            <button type="submit" class="btn btn-sm btn-primary">Update</button>
        </form>
    </td>
    <td>@(Model.Quantity * Model.Price).ToString("C")</td>
    <td>
        <form asp-action="RemoveFromCart" method="post">
            <input type="hidden" name="productId" value="@Model.ProductId" />
            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
        </form>
    </td>
</tr>
