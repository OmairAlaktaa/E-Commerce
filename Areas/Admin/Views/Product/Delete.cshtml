@model ProkodersECommerce.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}
<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Price:</strong> $@Model.Price.ToString("F2")</p>
</div>

<form asp-area="Admin" asp-controller="Product" asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ProductId" />
    <button type="submit">Delete</button>
    <a asp-area="Admin" asp-controller="Product" asp-action="Index">Cancel</a>
</form>