@model ProkodersECommerce.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}
<h2>@ViewData["Title"]</h2>

<form asp-area="Admin" asp-controller="Product" asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductId" />
    <div>
        <label>Name:</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div>
        <label>Description:</label>
        <textarea asp-for="Description"></textarea>
        <span asp-validation-for="Description"></span>
    </div>

    <div>
        <label>Price:</label>
        <input asp-for="Price" type="number" step="0.01" />
        <span asp-validation-for="Price"></span>
    </div>

    <div class="form-group">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" class="form-control" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <button type="submit">Save</button>
</form>
<a asp-area="Admin" asp-controller="Product" asp-action="Index">Back to List</a>
