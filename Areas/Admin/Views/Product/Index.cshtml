@model IEnumerable<ProkodersECommerce.Models.Product>

@{
    ViewData["Title"] = "Products - Admin";
}

<h2>Product List</h2>

<a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-primary mb-3">Add New Product</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Stock</td>
                <td>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-sm btn-warning mr-1">Edit</a>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-info mr-1">Details</a>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-danger">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>
